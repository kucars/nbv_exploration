  <run_depend>mav_msgs</run_depend>

  <build_depend>octomap</build_depend>
  <run_depend>octomap</run_depend>

  <export>
    <gazebo_ros gazebo_model_path="${prefix}/models"/>
    <gazebo_ros gazebo_media_path="${prefix}/"/>
  </export>
</package>
